<div class="review">

	<%= review.rating %>
	<p class="review-comment"><%= review.comment %></p>


	<% if user_signed_in? %>
		<% if review.user_id == current_user.id %>

			<div class="links btn-group">

				<%= link_to "Edit", edit_user_review_review_path(review.user_review, review), class: "btn btn-custom" %>
				<%= link_to "Delete", user_review_review_path(review.user, review), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-custom" %>

			</div>
		
		<% end %>	
	<% end %>

</div>		