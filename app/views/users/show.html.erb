<% if @user_review %>
   <div class="star">
     <div class="card-star">
       <div class="card-body">
        
        <h1 class="card-tittle">
          <img src="https://img.icons8.com/nolan/64/filled-star.png"/>
          Notation</h1>
        <br>
       </div> 
        <div>
        
        
      <%= link_to "ajouter un avis", new_user_review_review_path(@user_review) %>
<br><br>
      <%= render @user_review.reviews %>
